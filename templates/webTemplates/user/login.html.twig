{% extends 'webTemplates/base.html.twig' %}

{% block mainBody %}
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5 text-center">
                    <img src="{{ asset('images/nebbia.jpg') }}" class="mb-1" style="max-height: 2rem;" alt="logo">
                    <div>
                        <b>Zadanie RSS/Atom feed, Š.Šoltýs.</b>
                    </div>

                    <div class="card bg-light mb-4" style="border-radius: 1rem;">
                        <div class="card-body p-3 text-center">
                            <div class="mb-md-5 mt-md-4 pb-5">
                                <p class="mb-5">Prosím zadajte svoje prihlasovacie údaje.</p>
                                <form action="{{ path('loginCheck') }}" method="post">

                                {% if error %}
                                    <div class="alert alert-danger">
                                        {{ error }}
                                    </div>
                                {% endif %}

                                <div class="form-outline mb-4">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user" style="color: #999;"></i></span>
                                        </div>
                                        <input type="text" name="_username" class="form-control" placeholder="Prihlasovacie meno" value="{{ last_username }}" required autofocus>
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-lock" style="color: #999;"></i></span>
                                        </div>
                                        <input type="password" name="_password" class="form-control" placeholder="Heslo" required>
                                    </div>
                                </div>

                                <button class="btn btn-outline-primary px-5" type="submit">Prihlásiť</button>
                                </form>
                            </div>

                            <div style="margin: 1rem 0;">
                                <a href="{{ path('registrationForm') }}" class="btn btn-link">Nový používateľ</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
