{% extends 'webTemplates/base.html.twig' %}

{% block mainBody %}
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5 text-center">
                    <img src="{{ asset('images/nebbia.jpg') }}" class="mb-1" style="max-height: 2rem;" alt="logo">
                    <div>
                        <b>Zadanie RSS/Atom feed, Š.Šoltýs.</b>
                    </div>

                    <div class="card bg-light mb-4" style="border-radius: 1rem;">
                        <div class="card-body p-3 text-center">
                            <div class="mb-md-5 mt-md-4 pb-5">
                                <h2 class="mt-1 mb-4">Nový používateľ</h2>
                                {{ form_start(form) }}

                                {{ include('webTemplates/formErrors.html.twig') }}

                                <div class="form-outline mb-4">
                                    <label for="{{ form.name.vars.id }}">Meno</label>
                                    {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control' } }) }}
                                </div>

                                <div class="form-outline mb-4">
                                    <label for="{{ form.surname.vars.id }}">Priezvisko *</label>
                                    {{ form_widget(form.surname, { 'attr' : { 'class' : 'form-control' } }) }}
                                </div>

                                <div class="form-outline mb-4">
                                    <label for="{{ form.login.vars.id }}">Prihlasovacie meno *</label>
                                    {{ form_widget(form.login, { 'attr' : { 'class' : 'form-control' } }) }}
                                </div>

                                <div class="form-outline mb-4">
                                    <label for="{{ form.password.vars.id }}">Heslo *</label>
                                    {{ form_widget(form.password, { 'attr' : { 'class' : 'form-control' } }) }}
                                </div>

                                <a href="{{ path('login') }}" class="btn btn-link">Storno</a>
                                <button class="btn btn-outline-primary px-4" type="submit">
                                    <i class="fa fa-check"></i>&nbsp;
                                    Potvrdiť
                                </button>
                                {{ form_end(form) }}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
